{
  // Ім’я файлу: tsconfig.json
  "compilerOptions": {
    "target": "esnext", // Використовуємо сучасний ESNext
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Підтримка браузерних API + сучасного JS
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext", // ES-модулі
    "moduleResolution": "node", // Vite/Next.js чекають moduleResolution=node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve", // або "react-jsx" (Next.js автоматично «переведе» JSX)
    "types": [
      "node",
      "react",
      "next"
    ], // Підключаємо типи Node, React і Next.js
    // Якщо вам потрібні шляхи (aliases) — залиште, але переконайтеся, що baseUrl кореневий
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/data/*": [
        "src/data/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts", // обов’язково Next.js генерує
    "**/*.ts",
    "**/*.tsx",
    "src/**/*" // уключаємо всю папку src
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ]
}